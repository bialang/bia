#ifndef BIA_LOG_CONFIG_HPP_
#define BIA_LOG_CONFIG_HPP_

// clang-format off
#define BIA_LOG_LEVEL_ANY 0
#define BIA_LOG_LEVEL_TRACE 1
#define BIA_LOG_LEVEL_DEBUG 2
#define BIA_LOG_LEVEL_INFO 3
#define BIA_LOG_LEVEL_WARN 4
#define BIA_LOG_LEVEL_ERROR 5
#define BIA_LOG_LEVEL_CRITICAL 6
#define BIA_LOG_LEVEL_OFF 7
#cmakedefine BIA_LOG_LEVEL BIA_LOG_LEVEL_@BIA_LOG_LEVEL@
#define BIA_LOG_IS_ENABLED(level) (BIA_LOG_LEVEL_##level >= BIA_LOG_LEVEL)
#cmakedefine BIA_LOG_PATTERN "@BIA_LOG_PATTERN@"
#cmakedefine BIA_LOG_NAME "@BIA_LOG_NAME@"

#if BIA_LOG_LEVEL != BIA_LOG_LEVEL_OFF && !defined(SPDLOG_ACTIVE_LEVEL)
#	define SPDLOG_ACTIVE_LEVEL SPDLOG_LEVEL_@BIA_LOG_LEVEL@
#endif
// clang-format on

#endif
